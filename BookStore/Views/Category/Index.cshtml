@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">
                    <i class="bi bi-plus-square"></i> Create New Category
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped  table-hover">
            <thead>
                <tr>
                    <th class="text-center text-white bg-primary bg-gradient">
                        Category Name
                    </th>
                    <th class="text-center text-white bg-primary bg-gradient">
                        Display Order
                    </th>
                    <th class="text-center text-white bg-primary bg-gradient">
                        Modify 
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr class="text-center">
                        <td>@obj.Name</td>
                        <td class="text-center">
                            @obj.DisplayOrder
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secandary mx-2 ">
                                    <i class="bi bi-pencil-square text-primary"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secandary mx-2">
                                    <i class="bi bi-trash text-danger"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>